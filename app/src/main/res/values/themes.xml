<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Levelty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_round_corners_layout</item>
    </style>



    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Round</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>

    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.RoundCut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>



    <style name="dateTask">
        <item name="android:topLeftRadius">2dp</item>
        <item name="android:topRightRadius">2dp</item>
        <item name="android:bottomLeftRadius">2dp</item>
        <item name="android:bottomRightRadius">2dp</item>
        <item name="backgroundColor">#8B73E4</item>
    </style>


    <style name="Regular">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Light">
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Bold">
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExtraBold">
        <item name="android:fontFamily">@font/nunito_sans_extra_bold</item>
        <item name="fontFamily">@font/nunito_sans_extra_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ChipTextRegular" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="ChipTextBold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
    </style>

    <style name="ChipTextExtraBold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_sans_extra_bold</item>
    </style>



</resources>