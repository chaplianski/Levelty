<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Levelty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Light">
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Bold">
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExtraBold">
        <item name="android:fontFamily">@font/nunito_sans_extra_bold</item>
        <item name="fontFamily">@font/nunito_sans_extra_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>